<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="1900dp"
    android:layout_height="1100dp"
    tools:context=".Activities.Home">


    <TextView
        android:padding="5dp"
        android:textColor="@android:color/white"
        android:background="@android:color/black"
        android:text="Coloque su cámara sobre el código de barras en el cupón para escanear !"
        android:id="@+id/tv_scan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" />

    <FrameLayout
        android:layout_below="@+id/tv_scan"
        android:id="@+id/content_frame"
        android:layout_width="1500dp"
        android:layout_marginRight="560dp"
        android:layout_marginTop="-225dp"

        android:layout_height="1100dp"></FrameLayout>
</RelativeLayout>